{
  "phases": {
    "setup": {
      "nixPkgs": ["python311"]
    },
    "install": {
      "cmds": [
        "python3 -m pip install --upgrade pip",
        "python3 -m pip install -r requirements.txt"
      ]
    }
  },
  "start": {
    "cmd": "cd api && python3 -m uvicorn main:app --host 0.0.0.0 --port $PORT"
  }
}
